
CREATE TABLE product
	(
	product_id VARCHAR(4) NOT NULL,
	description VARCHAR(30),
		CONSTRAINT product_id_PK PRIMARY KEY (product_id)
	);

CREATE TABLE order_product
	(
	order# VARCHAR(3) NOT NULL,
	product_id VARCHAR(4) NOT NULL,
	price NUMBER(5,2),
	unit NUMBER(2),
	amount NUMBER(5,2),
		CONSTRAINT order#product_id_CK PRIMARY KEY (order#, product_id)
	);
	
CREATE TABLE customer_info
	(
	customer_id VARCHAR(4) NOT NULL,
	sold_to CHAR(10),
	address VARCHAR(20),
	city CHAR(10),
	state CHAR(2),
		CONSTRAINT customer_id_PK PRIMARY KEY (customer_id)
	);

CREATE TABLE order_info
	(
	order# VARCHAR(3) NOT NULL,
	order_date DATE,
	customer_id VARCHAR(4) NOT NULL,
		CONSTRAINT order#_PK PRIMARY KEY (order#),
		CONSTRAINT customer_id_FK FOREIGN KEY (customer_id)
			REFERENCES customer_info (customer_id)
	);
	
SELECT constraint_name, constraint_type
FROM user_constraints
WHERE table_name = 'PRODUCT';

SELECT constraint_name, constraint_type
FROM user_constraints
WHERE table_name = 'ORDER_PRODUCT';

SELECT constraint_name, constraint_type
FROM user_constraints
WHERE table_name = 'CUSTOMER_INFO';

SELECT constraint_name, constraint_type
FROM user_constraints
WHERE table_name = 'ORDER_INFO';
	
	

INSERT ALL
	INTO product(product_id, description) VALUES ('H001', 'hammer')
	INTO product(product_id, description) VALUES ('N001', 'nails')
	INTO product(product_id, description) VALUES ('P001', 'Phillips-Head screwdriver')
SELECT * FROM dual;

COMMIT;

INSERT ALL
	INTO order_product(order#, product_id, price, unit, amount) VALUES ('A01', 'H001', 5.00, 1, 5.00)
	INTO order_product(order#, product_id, price, unit, amount) VALUES ('A01', 'H001', 0.10, 20, 2.00)
	INTO order_product(order#, product_id, price, unit, amount) VALUES ('A01', 'P001', 3.00, 1, 3.00)
SELECT * FROM dual;

COMMIT;

